<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Círculo central -->
    <item>
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp"/>
            <solid android:color="#506DB7E6"/> <!-- Azul mucho más translúcido -->
        </shape>
    </item>

    <!-- Primer aro -->
    <item>
        <shape android:shape="oval">
            <size android:width="250dp" android:height="250dp"/> <!-- Más grande -->
            <stroke android:width="10dp" android:color="#50E0F2FF"/> <!-- Azul más sutil -->
        </shape>
    </item>

    <!-- Segundo aro -->
    <item>
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp"/> <!-- Más pequeño -->
            <stroke android:width="20dp" android:color="#40D0EBF8"/> <!-- Azul casi invisible -->
        </shape>
    </item>

    <!-- Tercer aro -->
    <item>
        <shape android:shape="oval">
            <size android:width="150dp" android:height="150dp"/>
            <stroke android:width="40dp" android:color="#30C0E4F1"/> <!-- Azul muy tenue -->
        </shape>
    </item>

    <!-- Cuarto aro -->
    <item>
        <shape android:shape="oval">
            <size android:width="100dp" android:height="100dp"/>
            <stroke android:width="80dp" android:color="#20B0DDED"/> <!-- Azul casi imperceptible -->
        </shape>
    </item>

</layer-list>
