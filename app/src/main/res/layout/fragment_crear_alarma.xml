<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#BF6DB7E6">

    <ViewFlipper
        android:id="@+id/viewFlipperCrearAlarma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out">

        <!-- PRIMERA VISTA: Escuchando -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvEscuchandoAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escuchando..."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp">

                <!-- CÃ­rculo de ondas en el fondo -->
                <ImageView
                    android:id="@+id/circleView"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/circle_riple_flexible"
                    android:scaleType="centerInside"/>

                <!-- AnimaciÃ³n de voz encima -->
                <ImageView
                    android:id="@+id/animacionVozAlarma"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/listening_animation"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:alpha="0.8"/>
            </FrameLayout>

            <!-- ðŸ”¹ Vista vacÃ­a para empujar el CardView hacia abajo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- ðŸ”¹ CardView hasta abajo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recuadroMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#4F8EF7"
                app:cardCornerRadius="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Por favor dime tu alarma, dÃ­a, fecha, hora y si deseas algÃºn sonido"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ViewFlipper>

</LinearLayout>
